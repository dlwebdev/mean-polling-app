// views/templates/PollingContainerComponent.jade
pre
  {{pollData | json}}

.container
  .jumbotron.text-center
    h1 Polling System
  .row
    .col-sm-6.col-sm-offset-3
      table.table.table-bordered
        thead
          tr
            th.text-center There are {{polls.length}} Current Polls
        tbody
          tr(*ngFor="var poll of polls")
            td
              input(type='checkbox' on-click='deletePoll(poll._id)' bind-checked="false")
              | &nbsp;&nbsp;
              | {{poll.text}}
  .row
    .col-sm-6.col-sm-offset-3
      form(on-ngSubmit='createPoll()')
        .form-group
          input.form-control.input-lg.text-center(type='text' placeholder='Name for this poll' bindon-ngModel='pollData.text' required)
          div(*ngFor="var option of pollData.options")
            input.form-control.input-lg.text-center(type='text' placeholder='option.text')
            | Index: {{index}}
            | Name: {{option.text}}
        .form-group.text-center
          br
          button.btn.btn-default.btn-lg(type='button' on-click='addPollOption()') Add Poll Option          
          br
          br
          button.btn.btn-success.btn-lg(type='submit') Save